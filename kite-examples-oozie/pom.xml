<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>org.kitesdk.examples</groupId>
  <artifactId>kite-examples-oozie</artifactId>
  <version>0.14.1-SNAPSHOT</version>
  <packaging>jar</packaging>

  <name>Kite Oozie Examples</name>

  <properties>
    <!-- Keep this updated to the latest Kite release! -->
    <kite-version>0.14.1-SNAPSHOT</kite-version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>

  <repositories>
    <repository>
      <id>cdh.repo</id>
      <url>https://repository.cloudera.com/artifactory/cloudera-repos</url>
      <name>Cloudera Repositories</name>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>
  </repositories>
  <pluginRepositories>
    <pluginRepository>
      <id>cdh.repo</id>
      <url>https://repository.cloudera.com/artifactory/cloudera-repos</url>
      <name>Cloudera Repositories</name>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </pluginRepository>
  </pluginRepositories>

  <dependencies>
    <dependency>
      <groupId>org.kitesdk</groupId>
      <artifactId>kite-data-core</artifactId>
      <version>${kite-version}</version>
    </dependency>
    <dependency>
      <groupId>org.kitesdk</groupId>
      <artifactId>kite-data-crunch</artifactId>
      <version>${kite-version}</version>
    </dependency>
    <dependency>
      <groupId>org.kitesdk</groupId>
      <artifactId>kite-data-hcatalog</artifactId>
      <version>${kite-version}</version>
    </dependency>
    <dependency>
      <groupId>org.apache.hive</groupId>
      <artifactId>hive-exec</artifactId>
      <version>0.12.0-cdh5.0.1</version>
    </dependency>
    <dependency>
      <groupId>org.apache.crunch</groupId>
      <artifactId>crunch-core</artifactId>
      <version>0.9.0-hadoop2</version>
    </dependency>
    <dependency>
      <groupId>org.apache.hadoop</groupId>
      <artifactId>hadoop-client</artifactId>
      <version>2.3.0-mr1-cdh5.0.1</version>
      <scope>provided</scope> <!-- provided by mvn kite:run-tool and MR task classpath -->
    </dependency>

    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <scope>test</scope>
      <version>4.10</version>      
    </dependency>

    <dependency> 
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-log4j12</artifactId>
      <scope>test</scope>
      <version>1.7.5</version>      
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.5.1</version>
        <configuration>
          <source>1.6</source>
          <target>1.6</target>
          <showDeprecation>true</showDeprecation>
          <showWarnings>true</showWarnings>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.avro</groupId>
        <artifactId>avro-maven-plugin</artifactId>
        <version>1.7.5</version>
        <configuration>
          <stringType>String</stringType>
          <createSetters>false</createSetters>
          <fieldVisibility>private</fieldVisibility>
        </configuration>
        <executions>
          <execution>
            <phase>generate-sources</phase>
            <goals>
              <goal>idl-protocol</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
    
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-eclipse-plugin</artifactId>
          <version>2.9</version>
          <configuration>
            <downloadSources>true</downloadSources>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>
  
  <profiles>
    <profile>
      <id>deploy-example</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.kitesdk</groupId>
            <artifactId>kite-maven-plugin</artifactId>
            <version>${kite-version}</version>
            <executions>
              <execution>
                <id>create-person-dataset</id>
                <phase>package</phase>
                <goals>
                  <goal>delete-dataset</goal>
                  <goal>create-dataset</goal>
                </goals>
                <inherited>false</inherited>
                <configuration>
                  <repositoryUri>repo:hive://localhost:9083</repositoryUri>
                  <datasetName>Person</datasetName>
                  <avroSchemaReflectClass>org.kitesdk.examples.oozie.Person</avroSchemaReflectClass>
                  <partitionExpression>identity("version", 1000)</partitionExpression>
                </configuration>
              </execution>
              <execution>
                <id>person-workflow</id>
                <phase>package</phase>
                <goals>
                  <goal>package-app</goal>
                  <goal>deploy-app</goal>
                  <goal>run-app</goal>
                </goals>
                <inherited>false</inherited>
                <configuration>
                  <applicationName>kite-examples-oozie-person-app</applicationName>
                  <applicationType>coordinator</applicationType>
                  <workflowName>Person-wf</workflowName>
                  <deployFileSystem>hdfs://localhost.localdomain</deployFileSystem>
                  <toolClass>org.kitesdk.examples.oozie.PersonTool</toolClass>
                  <updateApplication>true</updateApplication>
                  <args>
                    <arg>$${inputPathUri}</arg>
                    <arg>$${outputDatasetUri}</arg>
                  </args>
                  <coordinatorFile>${basedir}/src/main/resources/person-coordinator.xml</coordinatorFile>
                  <hadoopConfiguration>
                    <fs.default.name>hdfs://localhost.localdomain</fs.default.name>
                    <mapred.job.tracker>localhost.localdomain:8032 </mapred.job.tracker>
                  </hadoopConfiguration>
                  <jobProperties>
                    <workflowsPath>/user/${user.name}/apps</workflowsPath>
                    <datasetRepositoryUri>repo:hive://localhost:9083</datasetRepositoryUri>
                    <datasetDefinitionsPath>/user/${user.name}/apps/datasets.xml</datasetDefinitionsPath>
                    <inputPathUri>/user/cloudera/persons.txt</inputPathUri>
                  </jobProperties>
                  <oozieUrl>http://localhost.localdomain:11000/oozie</oozieUrl>
                </configuration>
              </execution>
              <execution>
                <id>create-personoutcomes-dataset</id>
                <phase>package</phase>
                <goals>
                  <goal>delete-dataset</goal>
                  <goal>create-dataset</goal>
                </goals>
                <inherited>false</inherited>
                <configuration>
                  <repositoryUri>repo:hive://localhost:9083</repositoryUri>
                  <datasetName>PersonOutcomes</datasetName>
                  <avroSchemaReflectClass>org.kitesdk.examples.oozie.PersonOutcomes</avroSchemaReflectClass>
                  <partitionExpression>identity("version", 1000)</partitionExpression>
                </configuration>
              </execution>
              <execution>
                <id>personoutcomes-workflow</id>
                <phase>package</phase>
                <goals>
                  <goal>package-app</goal>
                  <goal>deploy-app</goal>
                  <goal>run-app</goal>
                </goals>
                <inherited>false</inherited>
                <configuration>
                  <applicationName>kite-examples-oozie-personoutcomes-app</applicationName>
                  <applicationType>coordinator</applicationType>
                  <workflowName>PersonOutcomes-wf</workflowName>
                  <deployFileSystem>hdfs://localhost.localdomain</deployFileSystem>
                  <toolClass>org.kitesdk.examples.oozie.PersonOutcomesTool</toolClass>
                  <updateApplication>true</updateApplication>
                  <args>
                    <arg>$${inputDatasetUri}</arg>
                    <arg>$${outputDatasetUri}</arg>
                  </args>
                  <coordinatorFile>${basedir}/src/main/resources/personoutcomes-coordinator.xml</coordinatorFile>
                  <hadoopConfiguration>
                    <fs.default.name>hdfs://localhost.localdomain</fs.default.name>
                    <mapred.job.tracker>localhost.localdomain:8032 </mapred.job.tracker>
                  </hadoopConfiguration>
                  <jobProperties>
                    <workflowsPath>/user/${user.name}/apps</workflowsPath>
                    <datasetRepositoryUri>repo:hive://localhost:9083</datasetRepositoryUri>
                    <datasetDefinitionsPath>/user/${user.name}/apps/datasets.xml</datasetDefinitionsPath>
                  </jobProperties>
                  <oozieUrl>http://localhost.localdomain:11000/oozie</oozieUrl>
                </configuration>
              </execution>
              <execution>
                <id>create-personsummary-dataset</id>
                <phase>package</phase>
                <goals>
                  <goal>delete-dataset</goal>
                  <goal>create-dataset</goal>
                </goals>
                <inherited>false</inherited>
                <configuration>
                  <repositoryUri>repo:hive://localhost:9083</repositoryUri>
                  <datasetName>PersonSummary</datasetName>
                  <avroSchemaReflectClass>org.kitesdk.examples.oozie.PersonSummary</avroSchemaReflectClass>
                  <partitionExpression>identity("version", 1000)</partitionExpression>
                </configuration>
              </execution>
              <execution>
                <id>personsummary-workflow</id>
                <phase>package</phase>
                <goals>
                  <goal>package-app</goal>
                  <goal>deploy-app</goal>
                  <goal>run-app</goal>
                </goals>
                <inherited>false</inherited>
                <configuration>
                  <applicationName>kite-examples-oozie-personsummary-app</applicationName>
                  <applicationType>coordinator</applicationType>
                  <workflowName>PersonSummary-wf</workflowName>
                  <deployFileSystem>hdfs://localhost.localdomain</deployFileSystem>
                  <toolClass>org.kitesdk.examples.oozie.PersonSummaryTool</toolClass>
                  <updateApplication>true</updateApplication>
                  <args>
                    <arg>$${inputDatasetUri}</arg>
                    <arg>$${outputDatasetUri}</arg>
                  </args>
                  <coordinatorFile>${basedir}/src/main/resources/personsummary-coordinator.xml</coordinatorFile>
                  <hadoopConfiguration>
                    <fs.default.name>hdfs://localhost.localdomain</fs.default.name>
                    <mapred.job.tracker>localhost.localdomain:8032 </mapred.job.tracker>
                  </hadoopConfiguration>
                  <jobProperties>
                    <workflowsPath>/user/${user.name}/apps</workflowsPath>
                    <datasetRepositoryUri>repo:hive://localhost:9083</datasetRepositoryUri>
                    <datasetDefinitionsPath>/user/${user.name}/apps/datasets.xml</datasetDefinitionsPath>
                  </jobProperties>
                  <oozieUrl>http://localhost.localdomain:11000/oozie</oozieUrl>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>
